<h2>各別訂單檢視</h2>

<% if @order %>
  <table>
    <thead>
      <tr>
        <td>訂單編號</td>
        <td>活動名稱</td>
        <td>活動日期</td>
        <td>訂單金額</td>
        <td>檢視完整訂單</td>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |item| %>
        <tr>
          <td><%= item.num %></td>
          <td>活動名稱</td>
          <td>活動日期</td>
          <td><%= item.price %></td>
          <td><%= link_to '檢視個別訂單', order_path(item.id) %></td>
        </tr>
      <%end%>
    </tbody>
  </table>

<% else %>
  <h2>查無此訂單</h2>
<%end%>