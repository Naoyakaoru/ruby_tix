<div class="max-w-screen-xl pt-40 pb-10 z-20">

  <h2 class="text-2xl px-2 font-extrabold bg-gray-50">編輯會員資料</h2>



  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :信箱 %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :新密碼 %> <i>(若無需變更，請留白。)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em>請輸入至少 <%= @minimum_password_length %> 個英文字母</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :確認新密碼 %> <i>(若無需變更，請留白。)</i> <br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :原密碼 %> <i>(請輸入你現在的密碼，以確認此次變更內容。)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="field">
      <%= f.label :帳戶名稱 %><br />
      <%= f.text_field :account_name %>
    </div>

    <div class="field">
      <%= f.label :content %>
      <%= f.rich_text_area :content %>
      <%= @user.content  %>
    </div>


    <div class="actions">
      <%= f.submit "更新" %>
    </div>

  <% end %>

  <h3>刪除我的帳號</h3>

  <p><%= button_to "刪除", registration_path(resource_name), data: { confirm: "確定刪除嗎?" }, method: :delete %></p>

  <%= link_to '返回首頁', root_path %>

</div>