<!DOCTYPE html>
<html>
  <head>
    <title>RubyTix</title>
      
  
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="w-full">
      <section class="max-w-full"><%= render 'shared/navbar' %></section>
      <section class="max-w-full"><%= render 'shared/mainbar' %></section>
      <section><%= render 'shared/option' %></section>
      
      <%= yield %>
    </div>
  </body>
</html>
