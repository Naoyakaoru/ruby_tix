            <div class="flex">
              <div>
                <i class="far fa-calendar-alt"></i>
              </div>
              <div class="pl-2">
                <p><%= activity.begin_datetime  %></p>
              </div>
    
            </div>
            <div class="flex">
              <a href="#">
                <div class="flex">
                  <div class="pl-2">
                    <p>more</p>
                  </div>
                  <div>
                    <i class="fas fa-angle-double-right"></i>
                  </div>
                </div>
              </a>
            </div>
          </div>

        </div>
                  <% end %>
    

    
      </div>
    </div>
  </section>

