<h1>活動列表</h1>
<table>
<%= current_user.name %>
請選擇想參與的活動
<br />
<br />
<br />
<%= link_to "新增活動", new_activity_path %><br />
<br />
</table>
<table>
  <thead>
    <tr>
      <td>活動編號</td>
      <td>活動名稱</td>
      <td>活動狀態</td>  <%# <尚未開始/進行中/已結束 %>
      <td>開始時間</td>
      <td>結束時間</td>
      <td>活動地點</td>
      <td>參加人數</td>
      <td>活動編輯</td>
      <td>票券管理</td>
      <td>qr_code</td>
    </tr>
  </thead>
  
  <tbody>
    <% @activities.each_with_index do |activity, index| %>
    <tr>
      <td> <%= index + 1 %> </td>
      <td> <%= link_to activity.title, activity_path(activity.id)  %> </td>
      <td> <%= activity.is_available  %> </td>
      <td> <%= activity.begin_datetime&.strftime("%Y/%m/%d") %> </td>
      <td> <%= activity.finish_datetime&.strftime("%Y/%m/%d") %> </td>
      <td> <%= activity.location  %> </td>
      <td> <%= activity.activity_users.size %> </td>
      <td> 
        <%= link_to '編輯', edit_activity_path(activity), method: "get" %>
        <%= link_to '刪除', activity_path(activity), method: "delete", data: { confirm: "確認刪除" }%>
      </td>
      <td>
        <% if activity.ticket_types != [] %>
          <%= link_to '票券種類', activity_ticket_types_path(activity) %>
        <% else %>
          <%= link_to '新增票券', edit_activity_path(activity)%>
        <% end %>
      </td>
      <td><%= link_to '驗票', scan_activity_qr_codes_path(activity) %></td>
    </tr>   
    <% end %>
  </tbody>
</table> 
<br />
<br />
<%= link_to '回到首頁', root_path %>




