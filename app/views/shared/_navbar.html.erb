<div class="t-nav-div">
  <div class="t-category-area">
    <div class="t-category">熱門精選</div>
    <div class="t-category">5xRuby</div>
    <div class="t-category">文藝休閒</div>
  </div>
</div>

<div>
  <% if current_user %>
    <section class="t-nav flex justify-between items-center">
      <section>
        <%= link_to root_path do%>
          <p class="t-nav-logo">RUBYTIX</p>
        <% end%>
      </section>

      <section class="js-search-bar t-search-area">
        <input type="text" class="js-search-input t-search-input" placeholder="請輸入關鍵字">
        <button class="js-search-btn"><i class="fas fa-search fa-2x submit t-search-btn "></i></button>
      </section>

      <section class="flex">
        <div class="js-bell-notify h-12 w-12 flex items-center justify-center t-nav-btn">
          <i class="fas fa-bell fa-2x t-nav-btn"></i>
        </div>
        
        <div class="js-user-avator h-12 w-12 flex items-center justify-center t-nav-btn">
          <i class="far fa-user-circle fa-2x t-nav-btn"></i>
        </div>       

        <%= link_to cart_path do %>
          <div class="relative">
            <div class="h-12 w-12 flex items-center justify-center t-nav-btn">
              <i class="fas fa-cart-plus fa-2x "></i> 
            </div>
          </div>
        <% end%>

        <div class="t-cart-quantity rounded-full h-5 w-5 flex items-center justify-center">
          <%= current_cart.total_quantity %>  
        </div>

        <div class="js-user-option hidden fixed mt-20 mr-100">
          <div class="border border-gray-900 bg-gray-100 hover:font-semibold px-3 py-2"><%= link_to '編輯會員資料', edit_registration_path(:user), class: "hover:no-underline hover:text-gray-900" %></div>
          <div class="border border-gray-900 bg-gray-100 hover:font-semibold px-3 py-2"><%= link_to '票券管理', my_tickets_tickets_path, class: "hover:no-underline hover:text-gray-900" %></div>
          <div class="border border-gray-900 bg-gray-100 hover:font-semibold px-3 py-2"><%= link_to '訂單管理', orders_path, class: "hover:no-underline hover:text-gray-900" %></div>
          <div class="border border-gray-900 bg-gray-100 hover:font-semibold px-3 py-2"><%= link_to '活動管理', activities_path, class: "hover:no-underline hover:text-gray-900" %></div>
          <div class="border border-gray-900 bg-gray-100 hover:font-semibold px-3 py-2"><%= link_to '會員登出', destroy_user_session_path, :method => :delete , class: "hover:no-underline hover:text-gray-900" %></div>
        </div>

        <div class="js-bell-window hidden fixed mt-20 mr-100" >
          <ul>
          <% Notice.all.limit(10).order(created_at: :desc).each do |item| %>
          <li><div class="border border-gray-900 bg-gray-100 hover:font-semibold px-3 py-2"><%= item.notices %></div></li>
          <% end %>
          </ul>
        </div>

      </section>
    </section>
 
  <% else %>
    <section class="t-nav flex justify-between px-3 items-center">
      <section>
        <%= link_to root_path do%>
          <p class="t-nav-logo">RUBYTIX</p>
        <% end%>
      </section>

      <section class="js-search-bar t-search-area">
        <input type="text" class="js-search-input t-search-input" placeholder="請輸入關鍵字">
        <i class="fas fa-search fa-2x submit t-search-btn js-search-btn"></i>
      </section>

      <section class="flex">
        <button>
          <%= link_to '註冊', new_registration_path(:user) , class: "t-user-btn hover:no-underline mr-3" %> 
        </button>

        <button>
          <%= link_to '登入', new_session_path(:user) , class: "t-user-btn  hover:no-underline" %>
        </button>
      </section>
    </section>
  <% end %>
</div>

