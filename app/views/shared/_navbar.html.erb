<div class=" w-full h-20 fixed z-20">

  <% if current_user %>

    <section class="t-nav flex justify-between px-3 items-center">
      <section>
        <%= link_to root_path do%>
          RUBYTIX
        <% end%>
        <%#= link_to root_path do%>
          <%#= image_tag '/images/newlogo.png' ,class:"h-20" %>
        <%# <% end%> 
      </section>

      <div class="js-search-bar t-search-bar">
        <input type="text" class="search-input bg-red-100 rounded-md h-10 mx-3 px-3" placeholder="請輸入關鍵字">
        <i class="fas fa-search fa-2x submit search-btn  "></i>
      </div>

      <section class="flex">
        <div class=" h-12  flex items-center justify-center ">
          <p>Hi! <%= current_user.account_name %></p>
        </div>
        
        <div class="js-user-avator h-12 w-12 flex items-center justify-center hover:text-gray-100">
          <i class="far fa-user-circle fa-2x hover:text-gray-100"></i>
        </div>       

          <%= link_to orders_path do %>
          <div class="relative">
            <div class="h-12 w-12 flex items-center justify-center hover:text-gray-100 ">
              <i class="fas fa-cart-plus fa-2x hover:text-gray-100"></i> 
            </div>
          </div>
          <% end%>

          <div class="rounded-full h-5 w-5 flex items-center justify-center bg-gray-200 mt-1 absolute top-0 right-0">
            <%= current_cart.total_quantity %>  
          </div>

        <div class="js-user-option hidden fixed mt-20 mr-100">
          <div class="border border-gray-900 bg-gray-100 hover:font-semibold px-3 py-2"><%= link_to '編輯會員資料', edit_registration_path(:user), class: "hover:no-underline hover:text-gray-900" %></div>
          <div class="border border-gray-900 bg-gray-100 hover:font-semibold px-3 py-2"><%= link_to '票卷管理', my_tickets_tickets_path, class: "hover:no-underline hover:text-gray-900" %></div>
          <div class="border border-gray-900 bg-gray-100 hover:font-semibold px-3 py-2"><%= link_to '訂單管理', orders_path, class: "hover:no-underline hover:text-gray-900" %></div>
          <div class="border border-gray-900 bg-gray-100 hover:font-semibold px-3 py-2"><%= link_to '活動管理', activities_path, class: "hover:no-underline hover:text-gray-900" %></div>
          <div class="border border-gray-900 bg-gray-100 hover:font-semibold px-3 py-2"><%= link_to '會員登出', destroy_user_session_path, :method => :delete , class: "hover:no-underline hover:text-gray-900" %></div>
        </div>
     
        <%# <button> %>
          <%#= link_to '登出', destroy_user_session_path, :method => :delete , class: "submit search-btn flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-gray-100 bg-red-600 hover:bg-gray-100 hover:text-red-600 hover:no-underline h-10" %> 
        <%# </button>     %>
      </section>

    </section>
 
  <% else %>

    <section class="t-nav flex justify-between px-3 items-center">

      <section>
        <%= link_to root_path do%>
          <%= image_tag '/images/newlogo.png' ,class:"h-20" %>
        <% end%>
      </section>

      <div class="search-bar flex">
        <input type="text" class="search-input bg-red-100 rounded-md h-10 mr-3" placeholder="請輸入關鍵字">
        <button class="submit search-btn flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-gray-100 bg-red-600 hover:bg-gray-100 hover:text-red-600 h-10">搜尋</button>
      </div>

      <div class="flex">
        <button>
          <%= link_to '註冊', new_registration_path(:user) , class: "submit search-btn flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium  text-gray-100 bg-red-600 hover:bg-gray-100 hover:text-red-600 hover:no-underline h-10 mr-3" %> 
        </button>

        <button>
          <%= link_to '登入', new_session_path(:user) , class: "submit search-btn flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium  text-gray-100 bg-red-600 hover:bg-gray-100 hover:text-red-600 hover:no-underline h-10" %>
        </button>
      </div>
    </section>

  <% end %>
</div>

