<%= button_to '新增票券', new_admin_ticket_path, method: 'get' %>


<br>
<h1 class="title">票券</h1>

<table class="table is-fullwidth">
  <thead>
    <tr class="t1">
      <th>活動名稱</th>
      <th>票券id</th>
      <th>數量</th>
      <th>票價</th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to '五倍電影節ex'%></td>
        <td><%= ticket.id%></td>
        <td>
          <%= link_to "編輯", edit_admin_ticket_path(ticket), class: 'button is-light is-small' %>
          <%= link_to "刪除", admin_ticket_path(ticket), method: 'delete', data: { confirm: '確認刪除?!' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


